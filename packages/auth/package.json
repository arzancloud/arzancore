{
  "name": "@arzancloud/auth",
  "version": "0.1.0",
  "private": false,
  "description": "Arzan Platform - Authentication & Authorization",
  "license": "MIT",
  "author": "Arzan Cloud <dev@arzan.cloud>",
  "keywords": ["arzan", "auth", "authentication", "jwt", "middleware"],
  "repository": {
    "type": "git",
    "url": "https://github.com/arzancloud/arzancore.git",
    "directory": "packages/auth"
  },
  "homepage": "https://github.com/arzancloud/arzancore#readme",
  "bugs": {
    "url": "https://github.com/arzancloud/arzancore/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "sideEffects": false,
  "files": ["dist", "README.md"],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/server/index.ts src/client/index.ts --format cjs,esm --dts --external react",
    "dev": "tsup src/index.ts src/server/index.ts src/client/index.ts --format cjs,esm --dts --external react --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@arzancloud/database": "workspace:*",
    "@arzancloud/utils": "workspace:*",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "react": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
