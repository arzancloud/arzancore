{
  "name": "@arzancloud/utils",
  "version": "0.1.0",
  "private": false,
  "description": "Arzan Platform - Shared Utilities",
  "license": "MIT",
  "author": "Arzan Cloud <dev@arzan.cloud>",
  "keywords": ["arzan", "utils", "utilities", "helpers"],
  "repository": {
    "type": "git",
    "url": "https://github.com/arzancloud/arzancore.git",
    "directory": "packages/utils"
  },
  "homepage": "https://github.com/arzancloud/arzancore#readme",
  "bugs": {
    "url": "https://github.com/arzancloud/arzancore/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "sideEffects": false,
  "files": ["dist", "README.md"],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
