{
  "name": "@arzancloud/database",
  "version": "0.1.0",
  "private": false,
  "description": "Arzan Platform - Database Schema & Utilities",
  "license": "MIT",
  "author": "Arzan Cloud <dev@arzan.cloud>",
  "keywords": ["arzan", "database", "drizzle", "postgresql", "schema"],
  "repository": {
    "type": "git",
    "url": "https://github.com/arzancloud/arzancore.git",
    "directory": "packages/database"
  },
  "homepage": "https://github.com/arzancloud/arzancore#readme",
  "bugs": {
    "url": "https://github.com/arzancloud/arzancore/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "sideEffects": false,
  "files": ["dist", "README.md"],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.mjs",
      "require": "./dist/schema/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/schema/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/schema/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.3",
    "postgres": "^3.4.3",
    "@neondatabase/serverless": "^0.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "drizzle-kit": "^0.20.12",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
